<idea-plugin>
	<id>org.yanhuang.plugins.intellij.exportjar</id>
	<name>Export classes to jar</name>
	<version>1.0</version>
	<vendor email="zhyhang1978@gmail.com" url="http://blog.csdn.net/zhyhang">Yanhuang</vendor>

	<description><![CDATA[
      Export selected classes or resources to jar.<br>
      Like Eclipse's action of export classes to jar.<br>
    ]]></description>

	<change-notes><![CDATA[
  <b>1.0</b><br>
      Supports class, package, module, project exporting to a jar.<br>
    ]]>
	</change-notes>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
	<idea-version since-build="173.0"/>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
		 on how to target different products -->
	<!-- uncomment to enable plugin in all products
	<depends>com.intellij.modules.lang</depends>
	-->

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
	</extensions>

	<actions>
		<!-- Add your actions here -->
		<action id="ExportJar" class="org.yanhuang.plugins.intellij.exportjar.ExportJarAction" text="ExportJar" description="Export selected classes or resources to jar">
			<add-to-group group-id="ProjectViewCompileGroup" anchor="after" relative-to-action="Compile"/>
		</action>
	</actions>

</idea-plugin>